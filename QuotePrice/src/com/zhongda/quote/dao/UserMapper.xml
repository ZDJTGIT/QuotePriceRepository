<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhongda.quote.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.zhongda.quote.model.User">
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="salary" jdbcType="INTEGER" property="salary" />
    <result column="address" jdbcType="VARCHAR" property="address" />
  </resultMap>
  <insert id="insert" parameterType="com.zhongda.quote.model.User">
    insert into User (name, salary, address
      )
    values (#{name,jdbcType=VARCHAR}, #{salary,jdbcType=INTEGER}, #{address,jdbcType=VARCHAR}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.zhongda.quote.model.User">
    insert into User
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        name,
      </if>
      <if test="salary != null">
        salary,
      </if>
      <if test="address != null">
        address,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="salary != null">
        #{salary,jdbcType=INTEGER},
      </if>
      <if test="address != null">
        #{address,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <select id="selectUserList" resultMap="BaseResultMap" >
    select
    *
    from user
  </select>
  <select id="selectUserListByName" resultMap="BaseResultMap" parameterType="java.lang.String">
    select
    *
    from user
    where name = #{name,jdbcType=VARCHAR}
  </select>
</mapper>